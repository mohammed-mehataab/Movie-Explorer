generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Favorite {
  id          String   @id @default(cuid())
  userId      String
  movieId     Int
  title       String
  posterPath  String?
  releaseDate String?
  overview    String?
  rating      Int      @default(3)
  note        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, movieId], map: "userId_movieId")
  @@index([userId, updatedAt])
}
